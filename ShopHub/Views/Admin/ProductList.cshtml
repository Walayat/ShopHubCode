@model IEnumerable<ShopHub.Models.Dtos.ProductDto>
@using  ShopHub.Services.Interface
@inject ISessionManager _sessionManager
@using  ShopHub.Services.Utilities.Enums

@{
    ViewData["Title"] = "ProductList";
    var name = _sessionManager.GetUserName();
    var userTypeId = _sessionManager.GetUserTypeId();
}



<div class="sidenav">
    <ul class="leftSideUl">
        <li><h2 class="shopHubHeading">Shop Hub</h2></li>

        @if (userTypeId.Equals(Convert.ToInt32(UserTypeNames.Admin)))
        {
            <li><a href="#about">Order History</a></li>
            <li><a asp-action="Location" asp-controller="Admin">Location</a></li>
            <li><a asp-action="CreateProduct" asp-controller="Admin">Manage Products</a></li>
        }
        else
        {
            <li><a href="#about">Stores</a></li>
            <li><a href="#services">Orders History</a></li>
        }

    </ul>

</div>

<div class="main">
    <div class="text-center">

        <h1>Product List</h1>

        <p>
            <a asp-action="CreateProduct">Create New</a>
        </p>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Name)
                        </td>
                        <td>
                            <a href="/Admin/UpdateProduct/?productId=@item.Id">Edit</a> |
                            <a href="/Admin/DeleteProduct/?productId=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>

</div>
